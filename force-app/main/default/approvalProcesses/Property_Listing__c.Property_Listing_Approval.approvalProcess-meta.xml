<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Listing_Price__c</field>
        <field>Market_Analysis_Price__c</field>
        <field>Price_Per_SqFt__c</field>
        <field>Discount_From_Market__c</field>
        <field>Listing_Strategy__c</field>
        <field>Competitive_Analysis__c</field>
        <field>Listing_Status__c</field>
        <field>Approval_Status__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Manager Review</label>
        <name>Manager_Review</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>holland.tracy@example.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Discount_From_Market__c &gt; 0.20</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Regional Manager - High Discount Review</label>
        <name>Regional_Manager_High_Discount_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sk0990670+user5@gmail.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>OR(Property__r.Market_Value__c  &gt; 1000000, Property__r.Is_Luxary_Property__c  = TRUE)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Director - Luxury Property Review</label>
        <name>Director_Luxury_Property_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Commercial_Sales_Team</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>TEXT(Property__r.Property_Type__c) = &quot;Commercial&quot;</formula>
        </entryCriteria>
        <label>Commercial Specialist Review</label>
        <name>Commercial_Specialist_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Comprehensive approval process for property listings based on pricing, property type, and market value</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(
  TEXT(Listing_Status__c) = &quot;Pending Approval&quot;,
  Listing_Price__c &gt; 0,
  NOT(ISBLANK(Listing_Strategy__c))
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_Approval_to_Listing_Agent</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Listing_Status_to_Active</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Prepare_marketing_materials</name>
            <type>Task</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Revise_Property_Listing_Based_on_Feedback</name>
            <type>Task</type>
        </action>
        <action>
            <name>Send_Rejection_Email_to_Listing_Agent</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_Status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Listing_Status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_to_Listing_Agent</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Review_property_listing_approval</name>
            <type>Task</type>
        </action>
        <action>
            <name>Set_Approval_Status_to_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Listing_Status_to_Under_Review</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Property Listing Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>0</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
